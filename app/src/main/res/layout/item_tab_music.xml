<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@color/apptheme_color"

    android:id="@+id/linear"
    android:gravity="center"
    android:layout_height="wrap_content">

    <wm.com.danteater.customviews.WMImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/imgTab"
        custom:normal_src="@drawable/ic_music_tab"
        custom:selected_src="@drawable/ic_music_selected"

       />



    <TextView
        android:id="@+id/txtTab"
        android:text="share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"

        android:textSize="12sp" />


</LinearLayout>
