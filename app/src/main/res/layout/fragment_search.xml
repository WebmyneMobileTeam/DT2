<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wm.com.dt.search.FragmentSearch">

    <LinearLayout
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#006fb9"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search_icon" />

        <wm.com.dt.customviews.WMEdittext
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_corner_shape"
            android:hint="Søg på skuespil"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true" />
    </LinearLayout>

    <ListView
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/filterCategoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="true"
        android:divider="@color/apptheme_color"
        android:layout_below="@+id/searchView"
         >

    </ListView>

    <View
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/filterCategoryList"
        android:background="#006fb9">

    </View>

    <LinearLayout
        android:id="@+id/searchButtonView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <wm.com.dt.customviews.WMTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#006fb9"
            android:gravity="center"
            android:text="Søg"
            android:textColor="#ffffff"
            android:id="@+id/btnSearch"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
