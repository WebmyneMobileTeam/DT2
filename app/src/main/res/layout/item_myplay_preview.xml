<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <wm.com.dt.customviews.WMTextView
            android:id="@+id/txtPreviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title a very long text"
            android:layout_gravity="left|center_vertical"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgPreviewTrashIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right|center_vertical"
            android:src="@drawable/trash_image_selector_view" />
    </FrameLayout>

    <wm.com.dt.customviews.WMTextView
        android:id="@+id/txtPreviewAuther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auther"
        android:textColor="#a0a0a0"
        android:textSize="14sp" />

    <wm.com.dt.customviews.WMTextView
        android:id="@+id/txtPreviewDuration1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="#a0a0a0"
        android:textSize="14sp" />

    <wm.com.dt.customviews.WMTextView
        android:id="@+id/txtPreviewDuration2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="#a0a0a0"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textColor="#a0a0a0"
        android:orientation="horizontal"
        android:textSize="18sp">

        <wm.com.dt.customviews.WMTextView
            android:id="@+id/btnOrderPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_ordericon_black"
            android:textColor="@drawable/selector_view"
            android:gravity="center_vertical"
            android:text="Bestil"

            android:textSize="16sp" />

        <wm.com.dt.customviews.WMTextView
            android:id="@+id/btnSharePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_black"
            android:layout_gravity="center|center_vertical"
            android:gravity="center_vertical"
            android:textColor="@drawable/selector_view"
            android:text="Del"
            android:textSize="16sp" />

        <wm.com.dt.customviews.WMTextView
            android:id="@+id/btnReadPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_bookmarks_black"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:textColor="@drawable/selector_view"
            android:text="LÃ¦s"
            android:textSize="16sp" />
    </FrameLayout>
</LinearLayout>