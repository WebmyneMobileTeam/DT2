<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/internet_unavailable_bg"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/normalText"
            android:textColor="#747e87"
            android:text="Der findes  ikke noget musik til stykket"
            android:background="@drawable/circle_for_internet_unavailable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@color/apptheme_color"
            android:layout_height="wrap_content">

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/txtDownloadAllMusic"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:text="Hent alt musik"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/imgDownloadAllMusic"
                android:layout_alignBottom="@+id/imgDownloadAllMusic"
                android:textSize="@dimen/normalText" />

            <ImageView
                android:id="@+id/imgDownloadAllMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_av_download"/>
        </RelativeLayout>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_gravity="right|top" />
</FrameLayout>