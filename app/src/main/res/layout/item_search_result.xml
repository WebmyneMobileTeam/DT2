<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/nextImage"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/sResultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/search_info_small"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/search_info_small"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Bølle-Bob på besøg"
                android:textSize="@dimen/fragment_search_result_large_text"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/search_info_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_info_small" />
        </RelativeLayout>


        <wm.com.danteater.customviews.WMTextView
            android:id="@+id/sResultSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_info_small"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:singleLine="true"
            android:text="børne-musical af Gunnar Geertsen"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/normalText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/sResultParticipantsImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_number_of_participants_small" />

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/sResultParticipants"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"

                android:text="21-30"
                android:textSize="@dimen/normalText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/sResultMusicsImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_music_small" />

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/sResultMusics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"

                android:text="Musical"
                android:textSize="@dimen/normalText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/sResultAgeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_age_small" />

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/sResultAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"

                android:text="13-15"
                android:textSize="@dimen/normalText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/sResultDurationImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_duration_small" />

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/sResultDuration"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"

                android:text="120"
                android:textSize="@dimen/normalText" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/nextImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resultView"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_navigation_next_item" />
</RelativeLayout>