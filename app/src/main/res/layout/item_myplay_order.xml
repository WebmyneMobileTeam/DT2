<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <wm.com.danteater.customviews.WMTextView
            android:id="@+id/txtOrderTitle"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title a very long text"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/imgOrderTrashIcon"
            android:layout_alignBottom="@+id/imgOrderTrashIcon"
            android:textSize="@dimen/normalText" />

        <ImageView
            android:id="@+id/imgOrderTrashIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/trash_image_selector_view" />
    </RelativeLayout>


    <wm.com.danteater.customviews.WMTextView
        android:id="@+id/txtOrderAuther"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auther"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/fragment_my_play_small_text" />

    <wm.com.danteater.customviews.WMTextView
        android:id="@+id/txtOrderDuration1"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/fragment_my_play_small_text" />

    <wm.com.danteater.customviews.WMTextView
        android:singleLine="true"
        android:id="@+id/txtOrderDuration2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/fragment_my_play_small_text" />

    <wm.com.danteater.customviews.WMTextView
        android:singleLine="true"
        android:id="@+id/txtOrderNumberOfPerformance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Antal opførelser:"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/fragment_my_play_small_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <wm.com.danteater.customviews.WMTextView
            android:id="@+id/btnOrdering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_changeicon_black"
            android:textColor="@drawable/selector_view"
            android:gravity="center_vertical"
            android:layout_marginLeft="-8dp"
            android:text="Ret bestilling"

            android:textSize="@dimen/fragment_my_play_button_text" />

        <wm.com.danteater.customviews.WMTextView
            android:id="@+id/btnShareOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_black"
            android:layout_gravity="right|center_vertical"
            android:textColor="@drawable/selector_view"
            android:gravity="center_vertical"
            android:text="Del med elever"
            android:textSize="@dimen/fragment_my_play_button_text" />

        <!--<wm.com.danteater.customviews.WMTextView-->
        <!--android:id="@+id/btnReadOrder"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:drawableLeft="@drawable/ic_bookmarks_black"-->
        <!--android:layout_gravity="right|center_vertical"-->
        <!--android:textColor="@drawable/selector_view"-->
        <!--android:gravity="center_vertical"-->

        <!--android:text="Læs"-->
        <!--android:textSize="@dimen/fragment_my_play_button_text" />-->
    </FrameLayout>
</LinearLayout>