<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/read_play_cell"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:layout_height="wrap_content">


    <dk.danteater.danteater.customviews.WMTextView
        android:id="@+id/readPlayRoleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BÃ¸lle-Bob"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normalText"/>
    <dk.danteater.danteater.customviews.WMTextView
        android:id="@+id/readPlayRoleDescription"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Lorem ipsum... dsdf asdf"
        android:textColor="@android:color/black"
        android:textSize="@dimen/medium_text"/>

    <dk.danteater.danteater.customviews.WMTextView
        android:id="@+id/readPlayRoleSongTitle"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="992 sange 854 replikker"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small_text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <dk.danteater.danteater.customviews.WMTextView
            android:id="@+id/readPlayRoleNotAssigned"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikke tildelt"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_text"/>

        <dk.danteater.danteater.customviews.WMTextView
            android:id="@+id/readPlayroleAssignedButton"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tildel rolle"
            android:drawableLeft="@drawable/ic_number_of_participants_small"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_text"/>
        </RelativeLayout>
</LinearLayout>