<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/apptheme_color"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <wm.com.danteater.customviews.WMTextView
            android:id="@+id/txtDownloadAllMusic"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_height="match_parent"
            android:text="Hent alt musik"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/imgDownloadAllMusic"
            android:layout_alignBottom="@+id/imgDownloadAllMusic"
            android:textSize="@dimen/normalText" />

        <ImageView
            android:id="@+id/imgDownloadAllMusic"
            android:layout_width="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_av_download" />
    </RelativeLayout>
</LinearLayout>