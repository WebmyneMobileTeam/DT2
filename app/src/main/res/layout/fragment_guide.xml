<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="wm.com.danteater.guide.FragmentGuide">

    <android.support.v4.view.ViewPager
        android:id="@+id/guideSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        </android.support.v4.view.ViewPager>

    <wm.com.danteater.circle_indicator.CirclePageIndicator
        android:id="@+id/guideIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|clip_horizontal"
        android:padding="10dp" />
</FrameLayout>
