<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <wm.com.danteater.customviews.WMTextView
        android:id="@+id/item_orderplay_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="4dp"
        android:text="Label"
        android:textSize="@dimen/fragment_my_play_small_text" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <wm.com.danteater.customviews.WMTextView
                android:id="@+id/item_orderplay_selected_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_color"
                android:textSize="@dimen/fragment_my_play_small_text"
                android:visibility="gone" />

<!--            <EditText
                android:id="@+id/item_orderplay_selected_value_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:ems="2"
                android:focusable="true"

                android:background="@android:color/white"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/fragment_my_play_small_text"
                android:visibility="visible" />-->

        </FrameLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_navigation_next_item" />
    </LinearLayout>


    <EditText
        android:id="@+id/item_orderplay_selected_value_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:inputType="number"
        android:singleLine="true"
        android:text=""
        android:ems="2"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:paddingRight="40dp"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:background="@android:color/transparent"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/fragment_my_play_small_text"
        android:visibility="gone" />

</FrameLayout>